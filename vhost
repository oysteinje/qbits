proxy_cache_path /tmp/NGINX_cache/ keys_zone=backcache:10m;

map $http_upgrade $connection_upgrade {  
    default upgrade;  
    ' '     close;  
}
upstream nodejs {  
    # Use IP Hash for session persistence  
    ip_hash;

    # List of Node.js application servers  
    server 127.0.0.1:3000;  
}

server {  
    listen 80;  
    server_name main.azure.qbits.no;

    # Redirect all HTTP requests to HTTPS  
    location /webapp/ {  
        #return 301 https://$server_name$request_uri; 
        proxy_pass http://nodejs;
        proxy_cache backcache;
    }  
}

server {
       listen [::]:443 ssl ipv6only=on; # managed by Certbot
       listen 443 ssl http2; # managed by Certbot
       server_name main.azure.qbits.no;

       ssl_certificate /etc/letsencrypt/live/main.azure.qbits.no/fullchain.pem; # managed by Certbot
       ssl_certificate_key /etc/letsencrypt/live/main.azure.qbits.no/privkey.pem; # managed by Certbot
       include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
       ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
       #ssl_session_cache shared:SSL:1m;
       #ssl_prefer_server_ciphers on;  
       
       location = / {  
            return 302 /webapp/;  
       }

       location /webapp/ {
                proxy_pass http://nodejs;
                proxy_cache backcache;
       }

       # WebSocket configuration  
       location /wstunnel/ { 
           proxy_pass https://nodejs;  
           proxy_http_version 1.1;  
           proxy_set_header Upgrade $http_upgrade;  
           proxy_set_header Connection $connection_upgrade;  
       }
       
       access_log  /var/log/nginx/domain1.access.log;
}